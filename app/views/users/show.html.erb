<% provide(:title, 'Profile') %>
<div class="row">
    <aside class="span3">
        <section>
            <%= gravatar_for @user, size: 260  %>

            <h1 class="mobile"><%= @user.name %></h1>
            <p>member since  <%= @user.created_at.strftime("%b %Y") %></p>
            <h2 class="nonMobile">Messages</h2>
            <ul class="nonMobile">
                <li>(5) New</li>
                <li>(6) Unread</li>
                <li>(5) Trash</li>
            </ul>
            <h2 class="nonMobile">Settings</h2>

        </section>
    </aside>
    <aside class="span7">
        <section>
            <h1 class="nonMobile"><%= @user.name %> <span style="float:right; font-size:14px; margin-top:30px;">member since  <%= @user.created_at.strftime("%b %Y") %> </span>
</h1>
            <% if signed_in? %>
                <div class="row">
                    <aside class="span4">
                        <!--<section>-->
                            <!--<%= render 'shared/user_info' %>-->
                        <!--</section>-->
                        <section id="postForm" style="display:none;">
                            <%= render 'shared/micropost_form' %>
                        </section>
                    </aside>
                </div>
            <% end %>
            <h2><span id="addLink"  >add new</span> Recent Activity (<%= @user.microposts.count %>)</h2>
            <% if @user.microposts.any? %>
                <ol class="microposts">
                    <%= render @microposts %>
                </ol>
                <%= will_paginate @microposts %>
            <% end %>
        </section>
    </aside>
    <aside class="span3">
        <section>
            <h1> &nbsp</h1>

            <h2>Check-ins</h2>

            <div id="map" style='width: 100%; height: 200px;'></div>

                <ul>
                    <li></li>
                    <li></li>
                    <li></li>
                    <li></li>
                </ul>
        </section>
    </aside>
<script>
    var addButton = document.getElementById('addLink' ||'closeBtn'),
        toggle = false;
        addButton.onclick = function(){

        if( toggle === true)  {
            $('#postForm').hide(1000);
            toggle = false;
        }  else {
            $('#postForm').show(1000);
            toggle = true;
        }
    }

</script>
<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>
</div>
