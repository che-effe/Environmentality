<% provide(:title, @user.name) %>
<div class="row">
    <aside class="span3">
        <section>
            <h1><%= gravatar_for @user, size: 260  %>&nbsp</h1>
            <h2>Messages</h2>
            <ul>
                <li>(5) New</li>
                <li>(6) Unread</li>
                <li>(5) Trash</li>
            </ul>
            <h2>Settings</h2>

        </section>
    </aside>
    <aside class="span7">
        <section>
            <h1><%= @user.name %></h1>
            <h2>Recent Activities (<%= @user.microposts.count %>)</h2>
            <% if @user.microposts.any? %>
                <ol class="microposts">
                    <%= render @microposts %>
                </ol>
                <%= will_paginate @microposts %>
            <% end %>
        </section>
    </aside>
    <aside class="span3">
        <section>
            <h1> &nbsp</h1>

            <h2>Check-ins</h2>
        </section>
    </aside>

</div>


