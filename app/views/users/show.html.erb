<% provide(:title, @user.name) %>
<div class="row">
    <aside class="span3">
        <section>
            <h1><%= gravatar_for @user, size: 260  %>&nbsp</h1>
            <h2>Messages</h2>
            <ul>
                <li>(5) New</li>
                <li>(6) Unread</li>
                <li>(5) Trash</li>
            </ul>
            <h2>Settings</h2>

        </section>
    </aside>
    <aside class="span7">
        <section>
            <h1><%= @user.name %></h1>
            <% if signed_in? %>
                <div class="row">
                    <aside class="span4">
                        <!--<section>-->
                            <!--<%= render 'shared/user_info' %>-->
                        <!--</section>-->
                        <section id="postForm" style="display:none;">
                            <%= render 'shared/micropost_form' %>
                        </section>
                    </aside>
                </div>
            <% end %>
            <h2><span id="addLink" >add new</span> Recent Activity (<%= @user.microposts.count %>)</h2>
            <% if @user.microposts.any? %>
                <ol class="microposts">
                    <%= render @microposts %>
                </ol>
                <%= will_paginate @microposts %>
            <% end %>
        </section>
    </aside>
    <aside class="span3">
        <section>
            <h1> &nbsp</h1>

            <h2>Check-ins</h2>
            <div class="checkinMap"></div>
                <ul>
                    <li></li>
                    <li></li>
                    <li></li>
                    <li></li>
                </ul>
        </section>
    </aside>
<script>
    var addButton = document.getElementById('addLink' ||'closeBtn'),
        toggle = false;
        addButton.onclick = function(){

        if( toggle === true)  {
            $('#postForm').hide(1000);
            toggle = false;
        }  else {
            $('#postForm').show(1000);
            toggle = true;
        }
    }

</script>
</div>


